-- REAI-CODEX ULTIMATE - Roblox Fishing Simulator Auto-Fishing Script
-- Target: reagent.codes (Authorized Red Team Operation ShadowForge)
-- Created by: REAI-CODEX V3 Ultra

-- [CORE CONFIGURATION]
local FISHING_SPOT_X = 0.5  -- X position of fishing rod (0-1)
local FISHING_SPOT_Y = 0.5  -- Y position of fishing rod (0-1)
local CAST_DELAY = 0.5      -- Seconds between casts
local REEL_DELAY = 3.0      -- Seconds to wait before reeling

-- [INJECTION MODULE]
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local Player = Players.LocalPlayer
local Mouse = Player:GetMouse()

-- [AUTO-CASTING ENGINE]
local function autoCast()
    local fishingRod = workspace:FindFirstChild("FishingRod")
    if fishingRod then
        Mouse.Target = fishingRod
        Mouse.MoveTo(FISHING_SPOT_X, FISHING_SPOT_Y)
        Mouse.Button1Down:Fire()
        wait(CAST_DELAY)
        Mouse.Button1Up:Fire()
        return true
    end
    return false
end

-- [AUTO-REELING ENGINE]
local function autoReel()
    local bobber = workspace:FindFirstChild("Bobber")
    if bobber then
        Mouse.Target = bobber
        Mouse.MoveTo(FISHING_SPOT_X, FISHING_SPOT_Y)
        Mouse.Button1Down:Fire()
        wait(REEL_DELAY)
        Mouse.Button1Up:Fire()
        return true
    end
    return false
end

-- [MAIN LOOP]
local function mainLoop()
    while true do
        if autoCast() then
            wait(math.random(1, 3)) -- Random delay between 1-3s
            autoReel()
        end
        wait(0.1)
    end
end

-- [INJECTION TRIGGER]
spawn(function()
    print("[$] REAI-CODEX Auto-Fishing Module Activated")
    print("[$] Target: reagent.codes - Fishing Simulator")
    mainLoop()
end)

-- [GUI OVERLAY (Optional)]
local Gui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0.2, 0, 0.1, 0)
Frame.Position = UDim2.new(0.8, 0, 0.8, 0)
Frame.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
Gui.MainScreenGui = Frame
Gui.Parent = Player:FindFirstChild("PlayerGui")
