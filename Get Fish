-- Fishing Timer Script (Sah & Legal)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local function onPlayerJoin(player)
    local timer = Instance.new("ScreenGui")
    local label = Instance.new("TextLabel")
    label.Text = "Waktu Pancing: 0 detik"
    label.Size = UDim2.new(0.2, 0, 0.1, 0)
    label.Position = UDim2.new(0.8, 0, 0.9, 0)
    label.Parent = timer
    timer.Parent = player:WaitForChild("PlayerGui")

    local elapsed = 0
    while true do
        wait(1)
        elapsed += 1
        label.Text = "Waktu Pancing: " .. elapsed .. " detik"
    end
end

Players.PlayerAdded:Connect(onPlayerJoin)
